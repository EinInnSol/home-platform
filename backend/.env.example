TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SendGrid Email (optional for Phase 0)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Redis (optional for Phase 0)
REDIS_URL=

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
